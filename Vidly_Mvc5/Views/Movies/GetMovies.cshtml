@model IEnumerable<Vidly_Mvc5.Models.Movie>

@{
    ViewBag.Title = "All Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Moviess</h2>

<table class="table table-bordered table-hover">
    
    <thead>
    <tr><p>@Html.ActionLink("Add new movie", "New", "Movies", new { @class = "btn btn-primary" })</p><tr/>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
        </tr>

    </thead>
    <tbody>
    
    @foreach (var movie in Model)
    {
        <tr>

            <td>@Html.ActionLink(movie.Name, "Details", "Movies", new {id = movie.Id}, null)</td>

            <td>@movie.Genre.Name</td>
        </tr>
    }
    </tbody>

</table>