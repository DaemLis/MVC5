@model IEnumerable<Vidly_Mvc5.Models.Movie>

@{
    ViewBag.Title = "AllMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Movies</h2>

@if (Model.ToList().Count == 0)
{
    <span>Sorry! But there are no any movies</span>
}
else
{
<ul>
    @foreach (var movie in Model)
    {
        <li>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.MovieId }, null); </li>
        <span>Description: @movie.Description</span>
    }
</ul>

}